using System;

// Base Class
class PowerSource
{
    protected string SourceID;
    protected double BaseOutput;

    public string Id
    {
        get { return SourceID; }
        set { SourceID = value; }
    }

    public double Output
    {
        get { return BaseOutput; }
        set
        {
            if (value < 0) throw new ArgumentException("Output cannot be negative.");
            BaseOutput = value;
        }
    }

    public virtual void GenerateReport()
    {
        Console.WriteLine("Base PowerSource report.");
    }
}

// Sub-Class: SolarPanel
class SolarPanel : PowerSource
{
    public double SunlightPercent { get; set; }

    public SolarPanel(string id, double output, double sunlight)
    {
        SourceID = id;
        BaseOutput = output;
        SunlightPercent = sunlight;
    }

    public override void GenerateReport()
    {
        if (SunlightPercent < 0) throw new ArgumentException("Sunlight cannot be negative.");
        double actualOutput = BaseOutput * SunlightPercent / 100;
        Console.WriteLine($"PowerSource ID: {SourceID}");
        Console.WriteLine("Type: SolarPanel");
        Console.WriteLine($"Base Output: {BaseOutput}");
        Console.WriteLine($"Sunlight Modifier: {SunlightPercent}%");
        Console.WriteLine($"Calculated Output: {actualOutput}");
    }
}

// Sub-Class: WindTurbine
class WindTurbine : PowerSource
{
    public double WindSpeed { get; set; }

    public WindTurbine(string id, double output, double wind)
    {
        SourceID = id;
        BaseOutput = output;
        WindSpeed = wind;
    }

    public override void GenerateReport()
    {
        if (WindSpeed < 0) throw new ArgumentException("Wind speed cannot be negative.");
        double actualOutput = BaseOutput * WindSpeed / 100;
        Console.WriteLine($"PowerSource ID: {SourceID}");
        Console.WriteLine("Type: WindTurbine");
        Console.WriteLine($"Base Output: {BaseOutput}");
        Console.WriteLine($"Wind Speed Modifier: {WindSpeed}%");
        Console.WriteLine($"Calculated Output: {actualOutput}");
    }
}

// Main Program
class Program
{
    static void Main()
    {
        try
        {
            SolarPanel solar = new SolarPanel("SP01", 500, 80);
            WindTurbine wind = new WindTurbine("WT01", 600, 70);

            solar.GenerateReport();
            wind.GenerateReport();
        }
        catch (ArgumentException ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Unexpected Error: {ex.Message}");
        }
        finally
        {
            Console.WriteLine("System Shutdown");
        }
    }
}
